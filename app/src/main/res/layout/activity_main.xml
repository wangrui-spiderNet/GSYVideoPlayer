<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.gsyvideoplayer.MainActivity">

        <Button
            android:id="@+id/open_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="打开视频" />

        <Button
            android:id="@+id/list_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="视频列表" />

        <Button
            android:id="@+id/list_btn_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="视频列表2" />

        <Button
            android:id="@+id/recycler"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="循环播放" />

        <Button
            android:id="@+id/recycler_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="循环播放 2" />

        <Button
            android:id="@+id/list_detail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="视频详情" />

        <Button
            android:id="@+id/list_detail_list"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="详情列表" />


        <Button
            android:id="@+id/web_detail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="web详情" />


        <Button
            android:id="@+id/danmaku_video"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="弹幕视频" />

        <Button
            android:id="@+id/fragment_video"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Fragment" />

        <Button
            android:id="@+id/clear_cache"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="清空缓存" />

    </LinearLayout>
</ScrollView>